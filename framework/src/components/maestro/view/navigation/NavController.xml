<?xml version="1.0" encoding="UTF-8"?>
<component name="NavController" extends="BaseAggregateView">

  <interface>
    <field id="numberOfViews" type="integer" alwaysNotify="true"/>
    <field id="viewStack" type="array"/>
    
    <!-- events  -->
      <field id="isLastViewPopped" type="bool" alwaysNotify="true"/>

      <!-- if true, then push/pop/reset will automatically focus the top view -->
      <field id="isAutoFocusEnabled" type="bool" value="false"/>
      
    <!-- public functions -->  
      <function name="push" />
      <function name="pop" />
      <function name="replace" />
      <function name="reset" />
  </interface>

</component>
